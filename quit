[32m+[m[32m<?php[m
[32m+[m[32m/**[m
[32m+[m[32m * @link http://www.yiiframework.com/[m
[32m+[m[32m * @copyright Copyright (c) 2008 Yii Software LLC[m
[32m+[m[32m * @license http://www.yiiframework.com/license/[m
[32m+[m[32m */[m
[32m+[m
[32m+[m[32mnamespace common\widgets;[m
[32m+[m
[32m+[m[32m/**[m
[32m+[m[32m * Alert widget renders a message from session flash. All flash messages are displayed[m
[32m+[m[32m * in the sequence they were assigned using setFlash. You can set message as following:[m
[32m+[m[32m *[m
[32m+[m[32m * ```php[m
[32m+[m[32m * \Yii::$app->session->setFlash('error', 'This is the message');[m
[32m+[m[32m * \Yii::$app->session->setFlash('success', 'This is the message');[m
[32m+[m[32m * \Yii::$app->session->setFlash('info', 'This is the message');[m
[32m+[m[32m * ```[m
[32m+[m[32m *[m
[32m+[m[32m * Multiple messages could be set as follows:[m
[32m+[m[32m *[m
[32m+[m[32m * ```php[m
[32m+[m[32m * \Yii::$app->session->setFlash('error', ['Error 1', 'Error 2']);[m
[32m+[m[32m * ```[m
[32m+[m[32m *[m
[32m+[m[32m * @author Kartik Visweswaran <kartikv2@gmail.com>[m
[32m+[m[32m * @author Alexander Makarov <sam@rmcreative.ru>[m
[32m+[m[32m */[m
[32m+[m[32mclass Alert extends \yii\bootstrap\Widget[m
[32m+[m[32m{[m
[32m+[m[32m    /**[m
[32m+[m[32m     * @var array the alert types configuration for the flash messages.[m
[32m+[m[32m     * This array is setup as $key => $value, where:[m
[32m+[m[32m     * - $key is the name of the session flash variable[m
[32m+[m[32m     * - $value is the bootstrap alert type (i.e. danger, success, info, warning)[m
[32m+[m[32m     */[m
[32m+[m[32m    public $alertTypes = [[m
[32m+[m[32m        'error'   => 'alert-danger',[m
[32m+[m[32m        'danger'  => 'alert-danger',[m
[32m+[m[32m        'success' => 'alert-success',[m
[32m+[m[32m        'info'    => 'alert-info',[m
[32m+[m[32m        'warning' => 'alert-warning'[m
[32m+[m[32m    ];[m
[32m+[m
[32m+[m[32m    /**[m
[32m+[m[32m     * @var array the options for rendering the close button tag.[m
[32m+[m[32m     */[m
[32m+[m[32m    public $closeButton = [];[m
[32m+[m
[32m+[m[32m    public function init()[m
[32m+[m[32m    {[m
[32m+[m[32m        parent::init();[m
[32m+[m
[32m+[m[32m        $session = \Yii::$app->session;[m
[32m+[m[32m        $flashes = $session->getAllFlashes();[m
[32m+[m[32m        $appendCss = isset($this->options['class']) ? ' ' . $this->options['class'] : '';[m
[32m+[m
[32m+[m[32m        foreach ($flashes as $type => $data) {[m
[32m+[m[32m            if (isset($this->alertTypes[$type])) {[m
[32m+[m[32m                $data = (array) $data;[m
[32m+[m[32m                foreach ($data as $i => $message) {[m
[32m+[m[32m                    /* initialize css class for each alert box */[m
[32m+[m[32m                    $this->options['class'] = $this->alertTypes[$type] . $appendCss;[m
[32m+[m
[32m+[m[32m                    /* assign unique id to each alert box */[m
[32m+[m[32m                    $this->options['id'] = $this->getId() . '-' . $type . '-' . $i;[m
[32m+[m
[32m+[m[32m                    echo \yii\bootstrap\Alert::widget([[m
[32m+[m[32m                        'body' => $message,[m
[32m+[m[32m                        'closeButton' => $this->closeButton,[m
[32m+[m[32m                        'options' => $this->options,[m
[32m+[m[32m                    ]);[m
[32m+[m[32m                }[m
[32m+[m
[32m+[m[32m                $session->removeFlash($type);[m
[32m+[m[32m            }[m
[32m+[m[32m        }[m
[32m+[m[32m    }[m
[32m+[m[32m}[m
